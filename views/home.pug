doctype html
html
  head
    title Fractals ftw
    meta(charset='UTF-8')
    link(rel='stylesheet', href='/css/main.css')
    script(src='/js/three.min.js')
    script(src='/js/Fractals.js')
    script(src='/js/SpaceControls.js')
    script(src='/js/TrackballControls.js')
    script(src='/js/PointerLockControls.js')
    script(src='/js/stats.min.js')
    script(src='js/Tween.js')
    script(src='/socket.io/socket.io.js')
    script(src='js/math.min.js')
    script(src='js/StereoEffect.js')
  body
    div#title(align='center')
      div
        h1 Enjoy the visuals #{user.Username}

        br

        p Controls: ( W, A, S, D, R, F )

        p
          i Song: Drake - Fake Love (Electric Mantis remix)
        br
        p#loading Loading...
        div#loading_bar
          div#progress

    div#vr(align='center')
      div#vr_inner
        h1 Would you like to view in VR mode?
        br
        br
        div(onclick='select_vr(true)') Yes
        div(onclick='select_vr(false)') No

    div#crosshairs(align='center')
      div.horizontal
      div.vertical

    div#controlMenu(align='center')
      div.main
      div.menuBar
      div.menuBar
      div.menuBar
      div.guns
      div.music
      div.settings

    input(type='file')#song_input
    label(for='song_input')#song
      p#playing Playing: Fake Love
    //
      div#begin
        div(align='center')
          h1 Click here to begin
          p W = Forward
          p S = Reverse
          p A = Left
          p D = Right
          p R = Up
          p F = Down

    script(src='/js/menu-options.js')
    script(src='/js/mmo_client.js')
    script(src='/js/fireworks.js')
